<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
    <filter-mapping><filter-name>GuardFilter</filter-name><url-pattern/></filter-mapping>
    <filter-mapping><filter-name>AdminChecker</filter-name><url-pattern/></filter-mapping>
    <filter-mapping><filter-name>JspFilter</filter-name><url-pattern/></filter-mapping>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <scripting-invalid>true</scripting-invalid>
            <trim-directive-whitespaces>true</trim-directive-whitespaces>
        </jsp-property-group>
    </jsp-config>
    <session-config>
        <session-timeout>60</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
        </cookie-config>
    </session-config>
    <error-page>
        <error-code>400</error-code>
        <location>/coroner/400</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/coroner/401</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/coroner/404</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/coroner/405</location>
    </error-page>
    <error-page>
        <error-code>422</error-code>
        <location>/coroner/422</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/coroner/500</location>
    </error-page>
    <error-page>
        <error-code>501</error-code>
        <location>/coroner/501</location>
    </error-page>
    <error-page>
        <error-code>599</error-code>
        <location>/coroner/599</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/coroner</location>
    </error-page>
</web-app>
